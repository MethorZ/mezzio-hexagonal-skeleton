{
    "name": "methorz/hexa-skeleton",
    "description": "Minimal Mezzio skeleton application with PHP 8.4+",
    "type": "project",
    "license": "MIT",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "laminas/laminas-component-installer": true
        },
        "platform": {
            "php": "8.4.99"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laminas": {
            "component-whitelist": [
                "mezzio/mezzio",
                "mezzio/mezzio-helpers",
                "mezzio/mezzio-router",
                "laminas/laminas-httphandlerrunner",
                "mezzio/mezzio-fastroute",
                "mezzio/mezzio-cors"
            ]
        }
    },
    "require": {
        "php": "^8.4",
        "laminas/laminas-config-aggregator": "^1.18",
        "laminas/laminas-diactoros": "^3.8",
        "laminas/laminas-servicemanager": "^4.0",
        "mezzio/mezzio": "^3.25",
        "mezzio/mezzio-fastroute": "^3.11",
        "mezzio/mezzio-helpers": "^5.20"
    },
    "require-dev": {
        "laminas/laminas-development-mode": "^3.14",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.0",
        "roave/security-advisories": "dev-master",
        "slevomat/coding-standard": "^8.25",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "suggest": {
        "methorz/swift-db": "High-performance MySQL database layer with Laravel-style query builder (^1.0)"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "SkeletonInstaller\\": "src/SkeletonInstaller/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "src/App/Tests/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "bash -c 'cd .. && ./setup.sh'"
        ],
        "setup-installer": [
            "SkeletonInstaller\\OptionalPackages::install"
        ],
        "post-install-cmd": "@clear-config-cache",
        "post-update-cmd": "@clear-config-cache",
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "check": [
            "@cs-check",
            "@analyze",
            "@test"
        ],
        "analyze": "phpstan analyze --memory-limit=512M",
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "php -S 0.0.0.0:8080 -t public/"
        ],
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "scripts-descriptions": {
        "check": "Run all quality checks (code style, static analysis, tests).",
        "analyze": "Run static analysis with PHPStan at level 9.",
        "clear-config-cache": "Clears merged config cache. Required for config changes to be applied."
    }
}
